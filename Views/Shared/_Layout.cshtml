<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Taba_Digital</title>
    @* <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" /> *@
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">

    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <nav class="navbar col-12 me-auto position-fixed navbar-expand-lg navbar-dark bg-dark" style="z-index: 999;" >
        <div class="container-fluid col-11 m-auto">
          <a class="navbar-brand"  asp-controller="Home" asp-action="Index"><img src="~/imagens/logo3.jpeg" alt="" /></a>
          <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Home" asp-action="Index">Home</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Home" asp-action="Mapa" >Mapa</a>
                </li>
                <li class="nav-item"><a class="nav-link" asp-controller="Home" asp-action="Noticias" >Notícias</a></li>
                <li class="nav-item"><a class="nav-link" asp-controller="Home" asp-action="Parceiros" >Parceiros</a></li>
                <li class="nav-item"><a class="nav-link" asp-controller="Home" asp-action="Sobre" >Sobre</a></li>
                                   
                    <li  class="nav-item">
                        <a class="nav-link" asp-area="" asp-controller="Aldeia" asp-action="Index">Aldeia</a>
                    </li>
                    <li  class="nav-item">
                        <a class="nav-link" asp-area="" asp-controller="Doacoes" asp-action="Index">Doacoes</a>
                    </li>
                    <li  class="nav-item">
                        <a class="nav-link" asp-area="" asp-controller="Empresa" asp-action="Index">Empresa</a>
                    </li>
                    <li  class="nav-item">
                        <a class="nav-link" asp-area="" asp-controller="Necessidades" asp-action="Index">Necessidades</a>
                    </li>
                    <li  class="nav-item">
                        <a class="nav-link" asp-area="" asp-controller="Pessoa" asp-action="Index">Pessoa</a>
                    </li>
                    <li  class="nav-item">
                        <a class="nav-link" asp-area="" asp-controller="Solicita" asp-action="Index">Solicita</a>
                    </li>
            </ul>
          </div>
        </div>
      </nav>
    <div class="container main">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer style="background-color: #333" class="page-footer font-small blue p-5">
        <div class="text-center">
            <a href="#">© 2022 Copyright: Taba Digital</a>
        </div>
    </footer>

    @* <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script> *@

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>

    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
